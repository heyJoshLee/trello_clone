<h1>New Photo</h1>
  <div class="form_photos_new">
    <label for="title_input">
      Title
    </label>
    <input type="text" name="title" id="title_input" />

    <label for="image_input">
      Image URL
    </label>
    <input type="url" name="image" id="image_input" />


    <label for="body">
      Body
    </label>
    <textarea type="text" name="body" id="body_input" />

    </textarea>

    <label for="tags_input">
      Categories
      <br />
      <small>
        Enter all tags separated by a space
      </small>
    </label>
    <input type="text" name="tags" id="tags_input" />

    <a id="create_photo">Create Photo</a>
  </div>